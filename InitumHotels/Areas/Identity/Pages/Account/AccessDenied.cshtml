@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header class="bg-danger text-white text-center py-5">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">@ViewData["Title"]</h1>
        <p class="lead mb-4">You do not have access to this resource. Please contact support if you believe this is an error.</p>
        <a href="javascript:void(0)" class="btn btn-light btn-lg">Contact Support</a>
    </div>
</header>
