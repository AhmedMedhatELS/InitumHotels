@model string

@if (!string.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div id="statusMessage" class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
        <strong>@(statusMessageClass == "danger" ? "Error:" : "Success:")</strong> @Model
    </div>

    <script>
        setTimeout(function () {
            var alertElement = document.getElementById('statusMessage');
            if (alertElement) {
                alertElement.classList.remove('show');
                alertElement.classList.add('fade');
                // Optional: Remove the element from the DOM after fade transition
                setTimeout(function () {
                    alertElement.remove();
                }, 150); // Delay to allow fade transition
            }
        }, 3000); // 5 seconds
    </script>
}
