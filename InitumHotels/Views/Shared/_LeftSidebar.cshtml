@using Microsoft.AspNetCore.Identity
@using Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);

                    <div class="col-12 col-lg-3">
                        <div class="card">
                            <div class="card-body py-0 px-0">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-xl">
                        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Account Management" style="text-decoration:none;">
                                            <img src="~/images/users/@(user?.ProfileImage == null ? "profile-circle.svg" : user.ProfileImage)" alt="Face">
                                        </a>
                                    </div>
                                    <div class="ms-3 name">
                        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Account Management" style="text-decoration:none;">
                                            <h5 class="font-bold mb-0" style="white-space: nowrap;">@user?.FullName</h5> 
                                        </a>
                                        <form id="logoutForm" class="form-inline d-inline text-muted mb-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link border-0 p-0">Logout</button> 
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
          
                        </div>
                    </div>
}
